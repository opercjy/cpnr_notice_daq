# CPNR/config/cpnr.config
# CPNR DAQ 시스템 설정 파일

[General]
# DAQ 모드
# false = TCB 모드 (TCB 1대에 FADC, SADC 등이 연결된 중앙 동기화 모드)
# true  = Standalone 모드 (TCB 없이 FADC, SADC가 개별 USB로 PC에 연결된 모드)
standalone_mode = false

# 데이터 저장 경로
output_directory = /data/cpnr/raw
log_directory = /data/cpnr/log

[TCB_Mode]
# TCB 모드 (standalone_mode = false)일 때 사용
# TCB의 USB 시리얼 ID (SID)
tcb_sid = 0

[Standalone_Mode]
# 독립형 모드 (standalone_mode = true)일 때 사용
# 각 장비의 USB 시리얼 ID (SID)
# 현재 구성: FADC 1대, SADC 1대
fadc_sids = 1
sadc_sids = 2